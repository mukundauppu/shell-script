#!/bin/bash
USERID=$(sudo id -u)
LOG_FILE="/var/log"
VALIDATE()
{
if [ $USERID -ne 0 ]
then
echo "Root id :Failure"
else
echo "Root id :Success "
fi
dnf install mysql-server -y
if [ $? -ne 0 ]
then
echo "Install mysql server"
else
echo "Mysql server not installed"
fi
}
systemctl enable mysqld
VALIDATE $? "Enable mysqld"
systemctl enable mysqld
VALIDATE $? "Start mysqld"
